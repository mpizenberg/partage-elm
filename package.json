{
  "private": true,
  "type": "module",
  "scripts": {
    "i18n": "travelm-agency translations --elm_path=src/Translations.elm --inline",
    "prepare:dist": "rimraf dist && shx mkdir dist && pnpm bundle:html",
    "bundle:html": "shx cp public/index.html dist/",
    "bundle:js": "esbuild public/index.js --bundle --outfile=dist/index.js --format=iife",
    "prebuild": "pnpm i18n && pnpm prepare:dist && pnpm bundle:js",
    "build": "pnpm prebuild && elm-watch make --optimize",
    "watch:html": "watchexec -w public/index.html -- pnpm bundle:html",
    "watch:js": "esbuild public/index.js --bundle --outfile=dist/index.js --format=iife --watch",
    "watch:i18n": "watchexec -w translations -- pnpm i18n",
    "dev": "pnpm prebuild && run-pty % elm-watch hot % pnpm watch:html % pnpm watch:js % pnpm watch:i18n",
    "test": "elm-test",
    "format": "elm-format --yes src/ tests/"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "devDependencies": {
    "elm": "^0.19.1-6",
    "elm-format": "^0.8.8",
    "elm-test": "^0.19.1-revision17",
    "elm-watch": "2.0.0-beta.12",
    "esbuild": "^0.27.3",
    "rimraf": "^6.1.3",
    "run-pty": "^6.0.2",
    "shx": "^0.4.0",
    "travelm-agency": "^3.8.0"
  },
  "dependencies": {
    "@andrewmacmurray/elm-concurrent-task": "^2.0.0"
  }
}
